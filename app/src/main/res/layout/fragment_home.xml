<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_logo_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="동글동글"
            style="@style/TextAppearance.OO.logo_36sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="72dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="20dp"
            />

        <EditText
            android:id="@+id/et_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="동아리글, 동글동글!"
            android:background="@drawable/shape_rect_10_f3ae3c_line"
            android:gravity="left"
            style="@style/TextAppearance.OO.16sp"
            android:paddingStart="50dp"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_logo_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/iv_search_bar_circle"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/img_logo_circle"
            app:layout_constraintStart_toStartOf="@id/et_search_bar"
            app:layout_constraintTop_toTopOf="@id/et_search_bar"
            app:layout_constraintBottom_toBottomOf="@id/et_search_bar"
            android:layout_marginStart="8dp"
            />
        <ImageView
            android:id="@+id/iv_search_bar_search_icon"
            android:layout_width="24sp"
            android:layout_height="24sp"
            android:src="@drawable/ic_selected_search"
            app:layout_constraintStart_toEndOf="@id/et_search_bar"
            app:layout_constraintTop_toTopOf="@id/et_search_bar"
            app:layout_constraintBottom_toBottomOf="@id/et_search_bar"
            android:layout_marginStart="-40dp"
            />

        <ScrollView
            android:id="@+id/scrollable_content"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/et_search_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_homefragment_banner">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/vp_mainpage_banner"
                        android:layout_width="match_parent"
                        android:layout_height="222dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <me.relex.circleindicator.CircleIndicator3
                        android:id="@+id/btn_home_banner_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom"/>
                    </FrameLayout>


                <!--                    <androidx.recyclerview.widget.RecyclerView-->
                <!--                        android:id="@+id/rv_mainpage_benner_img"-->
                <!--                        app:layout_constraintTop_toTopOf="parent"-->
                <!--                        app:layout_constraintStart_toStartOf="parent"-->
                <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                <!--                        tools:listitem="@layout/item_mainpage_banner"-->
                <!--                        android:layout_width="match_parent"-->
                <!--                        android:layout_height="222dp">-->
                <!--                    </androidx.recyclerview.widget.RecyclerView>-->


                <LinearLayout
                    android:id="@+id/first_contnet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_30_yellow_line"
                    app:layout_constraintTop_toBottomOf="@id/layout_homefragment_banner"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동글동글"
                        style="@style/TextAppearance.OO.18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동아리 홍보글"
                        android:layout_marginTop="20dp"
                        style="@style/TextAppearance.OO.16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개소개소개소개소개소개ㅗ새고새고새괘소개..."
                        style="@style/TextAppearance.OO.gray_14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동아리 홍보글"
                        android:layout_marginTop="4dp"
                        style="@style/TextAppearance.OO.16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개소개소개소개소개소개ㅗ새고새고새괘소개..."
                        style="@style/TextAppearance.OO.gray_14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동아리 홍보글"
                        android:layout_marginTop="4dp"
                        style="@style/TextAppearance.OO.16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개소개소개소개소개소개ㅗ새고새고새괘소개..."
                        style="@style/TextAppearance.OO.gray_14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/second_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_30_yellow_line"
                    app:layout_constraintTop_toBottomOf="@id/first_contnet"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingHorizontal="32dp"
                    android:paddingVertical="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="재잘재잘"
                        style="@style/TextAppearance.OO.18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동아리 홍보글"
                        android:layout_marginTop="20dp"
                        style="@style/TextAppearance.OO.16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개소개소개소개소개소개ㅗ새고새고새괘소개..."
                        style="@style/TextAppearance.OO.gray_14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동아리 홍보글"
                        android:layout_marginTop="4dp"
                        style="@style/TextAppearance.OO.16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개소개소개소개소개소개ㅗ새고새고새괘소개..."
                        style="@style/TextAppearance.OO.gray_14sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동아리 홍보글"
                        android:layout_marginTop="4dp"
                        style="@style/TextAppearance.OO.16sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소개소개소개소개소개소개ㅗ새고새고새괘소개..."
                        style="@style/TextAppearance.OO.gray_14sp"/>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>