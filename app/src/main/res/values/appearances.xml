<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.OO" parent="">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    
    <style name="TextAppearance.OO.logo_60sp">
        <item name="fontFamily">@font/rixinooariduri_pro_regular</item>
        <item name="android:textSize">60sp</item>
        <item name="android:textColor">@color/oo.yellow</item>
    </style>

    <style name="TextAppearance.OO.logo_36sp">
        <item name="fontFamily">@font/rixinooariduri_pro_regular</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/oo.yellow</item>
    </style>


    <style name="TextAppearance.OO.16sp">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.OO.guide">
        <item name="android:textColor">@color/light.gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.OO.hint">
        <item name="android:textColor">@color/light.gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.OO.14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.OO.12sp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.OO.prtendard_12sp">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.OO.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.OO.searchbar">
        <item name="android:textColor">@color/light.gray</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>